<% if (@event.event_results.map { |er| er.status } | ["Pending"]).any? %>
  <%= link_to 'Reschedule', edit_event_path(@event), class: "btn btn-warning btn-sm pull-right" %>  
<% elsif (@event.event_results.map { |er| er.status } | ["Scheduled"]).any? %>
  <%= link_to "Enqueue", start_event_path(@event), class: "btn btn-info btn-sm pull-right" %>
  <%= link_to 'Reschedule', edit_event_path(@event), class: "btn btn-warning btn-sm pull-right" %>  
<% elsif  (@event.event_results.map { |er| er.status } | ["Enqueued"]).any? %>

<% elsif  (@event.event_results.map { |er| er.status } | ["Processing"]).any? %>
  
<% elsif  (@event.event_results.map { |er| er.status } | ["Success"]).any? %>
  <%= link_to 'Reschedule', edit_event_path(@event), class: "btn btn-warning btn-sm pull-right" %>  
<% end %>
 
